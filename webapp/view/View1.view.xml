<mvc:View controllerName="test7.project7.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
   <VBox class="sapUiSmallMargin">
        <!-- Input for scanned code -->
        <Input
            id="materialInput"
            placeholder="Scan 1D barcode here..."
            width="100%" />

        <!-- Button to start scanning -->
        <Button
            text="Scan Barcode"
            press=".onScanPress"
            type="Emphasized" />

        <!-- Container for video preview -->
        <VBox id="barcodeContainer" style="width:100%;height:300px;background-color:#f2f2f2;border:1px solid #ccc;" />


    </VBox>
    </Page>
</mvc:View>